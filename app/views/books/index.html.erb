<h1>Books</h1>
<% @books.each do |book|%>
  <span><%= book.title %></span>
<%end%>

 <h2>New book</h2>
 <% if @book.errors.any?%>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%=form_with model:Book.new do |f|%>
  <h4>Title</h4>
  <%=f.text_field:title %>
  <h4>Body</h4>
  <%=f.text_area:body %>

  <%=f.submit'Create Book'%>
<%end%>
